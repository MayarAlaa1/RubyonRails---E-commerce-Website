<%= form_with(model: product , local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <%= form.label :image %>
  <%= form.file_field :image, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :instockquantity %>
    <%= form.number_field :instockquantity %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id ,  Category.all.collect {|c| [c.id]} %>

  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.select :brand_id ,  Brand.all.collect {|b| [b.id]} %>
  </div>

  <div class="field">
    <%= form.label :store_id %>
    <%= form.select :store_id ,  Store.all.collect {|s| [s.id]} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
